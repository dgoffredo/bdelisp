cmake -GNinja \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_PREFIX_PATH=/home/david/src/bde/_install/opt/bb/lib64/opt_exc_mt/ \
        -DCMAKE_CXX_FLAGS=-pg \
        -DCMAKE_EXE_LINKER_FLAGS=-pg \
        -DCMAKE_SHARED_LINKER_FLAGS=-pg \
        ../

